{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "jsx",
    "jsxFragmentFactory": "Fragment",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "paths": {
      "@kuba/*": [
        "pixel/*",
        "standard/*"
      ]
    },
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "src"
  ]
}
